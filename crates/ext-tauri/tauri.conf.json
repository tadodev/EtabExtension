{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Etab Extension",
  "version": "0.1.0",
  "identifier": "com.tado.desktop",
  "build": {
    "beforeDevCommand": "pnpm --filter desktop dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm --filter desktop build",
    "frontendDist": "../../apps/desktop/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Etab Extension",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
